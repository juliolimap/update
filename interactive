worker_power_snes() {
#!/usr/bin/env bash
df -h . | awk '{print $4}' >/tmp/HD.txt
FILENAME='/tmp/HD.txt'
I=0
for LN in $(cat $FILENAME)
do
echo "Line number $((I++)) -->  $LN"
done
local default=no
  while [ 0 = 0 ]; do
  ask_option $default "Espaco ($LN)"  ""  required \
      1 "Roms Super Nintendo " \
      2 "Scraper Super Nintendo " \
      3 "Voltar ao Menu" || return

    case $ANSWER_OPTION in
      "1") execute /
clear
mediafire https://www.mediafire.com/file/748wm9wx3ww84ua/snes.7z/file
7z x snes.7z -o/home/arcade/shared/roms
sudo rm -r snes.7z
sudo chmod -R 777 /home/arcade/shared/roms/snes
sudo cp -r "/home/arcade/shared/frontends/attract/emulators/base add emulador/snes.cfg" "/home/arcade/shared/frontends/attract/emulators/"
 

;;

      "2") execute 
clear
sudo rm -r /home/arcade/shared/frontends/attract/romlists/snes.txt
sudo -H -u arcade Skyscraper -p snes -e snes -c /home/arcade/.skyscraper/config.ini -s screenscraper
sudo -H -u arcade Skyscraper -p snes -e snes
sudo rm -R /home/arcade/.skyscraper/cache/snes
sudo rm -R /home/arcade/.local/share/Trash
sudo chmod -R 777 /home/arcade/shared/frontends/attract/emulators 
;;
      "3") return 0 ;;
      *) notify "Bad option $ANSWER_OPTION given" ;;
    esac
  done

  return 0
}




 



