worker_instal_system() {
#!/usr/bin/env bash
df -h . | awk '{print $4}' >/tmp/HD.txt
 

FILENAME='/tmp/HD.txt'
I=0
for LN in $(cat $FILENAME)
do
    echo "Line number $((I++)) -->  $LN"
done
sudo chmod -R 777 /home/arcade/shared/frontends/attract
  
  local default=no
  while [ 0 = 0 ]; do
    ask_option $default "Instalar emulador espaco disponivel ($LN)"  ""  required \
      1 "Arcade 2.0GB" \
      2 "Atari 2600 500MB" \
      3 "Atari 5200 500MB" \
      4 "Atari 7800 600MB" \
      5 "Atari Jaguar 800 MB" \
      6 "Atomiswave 1.5GB" \
      7 "Capcom III 400MB" \
      8 "Dreamcast 5.0GB" \
      9 "FBneo 1.8GB" \
      10 "Gamegear 500MB" \
      11 "Gameboy 700MB" \
      12 "Gamecube 5.0GB" \
      13 "Mastersystem 2.5GB" \
      14 "Megadrive 1.5GB" \
      15 "Nintendo 64 1.5GB" \
      16 "Naomi 1.0GB" \
      17 "Nintendo 1.2GB" \
      18 "Playstation 1 1.4GB" \
      19 "Sega32X 1.0GB" \
      20 "Super Nintendo 2.0GB" \
      21 "Nintendo WII 4.0GB" \
      22 "Voltar ao Menu" || return

    case $ANSWER_OPTION in
      "1") execute worker power_mame  && default=3 ;;
      "2") execute worker power_atari && default=4 ;;
      "3") execute worker power_atari5200 && default=5 ;;
      "4") execute worker power_atari7800 && default=6 ;;
      "5") execute worker power_atarijaguar && default=7 ;;
      "6") execute worker power_atomis && default=8 ;;
      "7") execute worker power_cps3 && default=8 ;;
      "8") execute worker power_dreancast && default=9 ;;
      "9") execute worker power_fba && default=10 ;;
      "10") execute worker power_gamegear && default=11 ;;
      "11") execute worker power_gb && default=12 ;;
      "12") execute worker power_gamecube && default=13 ;;
      "13") execute worker power_master && default=14 ;;
      "14") execute worker power_mega && default=15 ;;
      "15") execute worker power_n64 && default=17 ;;
      "16") execute worker power_naomi && default=18 ;;
      "17") execute worker power_nes && default=21 ;;
      "18") execute worker power_psx && default=23 ;;
      "19") execute worker power_32x && default=27 ;;
      "20") execute worker power_snes && default=29 ;;
      "21") execute worker power_wii  ;;
      "22") return 0 ;;
      *) notify "Bad option $ANSWER_OPTION given" ;;
    esac
  done

  return 0
}











 


 











