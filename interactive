  while [ 0 = 0 ]; do
  ask_option $default "Espaco ($LN)"  ""  required \
     1 "Roms Final Burn NeoGeo" \
      2 "Scraper Final Burn NeoGeo" \
      3 "Voltar ao Menu" || return

    case $ANSWER_OPTION in
      "1") execute /
clear

mediafire   https://www.mediafire.com/file/2giqjmanvmw0e0x/fba.7z/file
7z x fba.7z -o/home/arcade/shared/roms

 
sudo rm -r fba.7z
sudo chmod -R 777 /home/arcade/shared/roms/fba
sudo cp -r "/home/arcade/shared/frontends/attract/emulators/base add emulador/fba.cfg" "/home/arcade/shared/frontends/attract/emulators/"
  
;;

      "2") execute 
clear
sudo rm -r /home/arcade/shared/frontends/attract/romlists/fba.txt
sudo -H -u arcade Skyscraper -p fba -e fba -c /home/arcade/.skyscraper/config.ini -s screenscraper
sudo -H -u arcade Skyscraper -p fba -e fba
sudo rm -R /home/arcade/.skyscraper/cache/fba
sudo rm -R /home/arcade/.local/share/Trash
sudo chmod -R 777 /home/arcade/shared/frontends/attract/emulators 
;;
      "3") return 0 ;;
      *) notify "Bad option $ANSWER_OPTION given" ;;
    esac
  done

  return 0
}







